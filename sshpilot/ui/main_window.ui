<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.2"/>
  
  <object class="AdwOverlaySplitView" id="split_view">
    <property name="sidebar-width-fraction">0.25</property>
    <property name="min-sidebar-width">200</property>
    <property name="max-sidebar-width">400</property>
    
    <!-- Sidebar -->
    <property name="sidebar">
      <object class="AdwPreferencesPage">
        <property name="title">Connections</property>
        
        <!-- Connection List -->
        <child>
          <object class="AdwPreferencesGroup" id="connection_list">
            <property name="title">Connections</property>
            <property name="description">Manage your SSH connections</property>
          </object>
        </child>
        
        <!-- Action Buttons -->
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow" id="add_button">
                <property name="title">Add Connection</property>
                <property name="subtitle">Create a new SSH connection</property>
                <property name="icon-name">list-add-symbolic</property>
                <property name="activatable">true</property>
              </object>
            </child>
            
            <child>
              <object class="AdwActionRow" id="edit_button">
                <property name="title">Edit Connection</property>
                <property name="subtitle">Modify selected connection</property>
                <property name="icon-name">document-edit-symbolic</property>
                <property name="activatable">true</property>
                <property name="sensitive">false</property>
              </object>
            </child>
            
            <child>
              <object class="AdwActionRow" id="delete_button">
                <property name="title">Delete Connection</property>
                <property name="subtitle">Remove selected connection</property>
                <property name="icon-name">user-trash-symbolic</property>
                <property name="activatable">true</property>
                <property name="sensitive">false</property>
              </object>
            </child>
            
            <child>
              <object class="AdwActionRow" id="menu_button">
                <property name="title">Menu</property>
                <property name="subtitle">Application menu</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="activatable">true</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    
    <!-- Content Area -->
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        
        <!-- Tab Bar -->
        <child>
          <object class="AdwTabBar" id="tab_bar">
            <property name="view">tab_view</property>
            <property name="autohide">true</property>
          </object>
        </child>
        
        <!-- Tab View -->
        <child>
          <object class="AdwTabView" id="tab_view">
            <property name="vexpand">true</property>
            <property name="hexpand">true</property>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>