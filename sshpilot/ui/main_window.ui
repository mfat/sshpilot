<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.2"/>
  
  <object class="AdwOverlaySplitView" id="split_view">
    <property name="sidebar-width-fraction">0.25</property>
    <property name="min-sidebar-width">200</property>
    <property name="max-sidebar-width">400</property>
    
    <!-- Sidebar -->
    <property name="sidebar">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        
        <!-- Connection List -->
        <child>
          <object class="AdwPreferencesPage">
            <property name="title">Connections</property>
            <property name="vexpand">true</property>
            
            <child>
              <object class="AdwPreferencesGroup" id="connection_list">
                <property name="title">Connections</property>
                <property name="description">Manage your SSH connections</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Action Buttons at Bottom -->
        <child>
          <object class="GtkBox" id="action_buttons_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="halign">start</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-bottom">12</property>
            
            <child>
              <object class="GtkButton" id="add_button">
                <property name="icon-name">list-add-symbolic</property>
                <property name="tooltip-text">Add Connection</property>
                <property name="css-classes">flat</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="edit_button">
                <property name="icon-name">document-edit-symbolic</property>
                <property name="tooltip-text">Edit Connection</property>
                <property name="css-classes">flat</property>
                <property name="sensitive">false</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="delete_button">
                <property name="icon-name">user-trash-symbolic</property>
                <property name="tooltip-text">Delete Connection</property>
                <property name="css-classes">flat</property>
                <property name="sensitive">false</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="menu_button">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="tooltip-text">Application Menu</property>
                <property name="css-classes">flat</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    
    <!-- Content Area -->
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        
        <!-- Tab Bar -->
        <child>
          <object class="AdwTabBar" id="tab_bar">
            <property name="view">tab_view</property>
            <property name="autohide">true</property>
          </object>
        </child>
        
        <!-- Tab View -->
        <child>
          <object class="AdwTabView" id="tab_view">
            <property name="vexpand">true</property>
            <property name="hexpand">true</property>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>