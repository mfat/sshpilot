<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.2"/>
  
  <template class="MainWindow" parent="AdwApplicationWindow">
    <property name="title">sshPilot</property>
    <property name="default-width">1200</property>
    <property name="default-height">800</property>
    <property name="icon-name">io.github.mfat.sshpilot</property>
    
    <child>
      <object class="AdwOverlaySplitView" id="split_view">
        <property name="sidebar-width-fraction">0.25</property>
        <property name="min-sidebar-width">200</property>
        <property name="max-sidebar-width">400</property>
        
        <!-- Sidebar -->
        <property name="sidebar">
          <object class="AdwClamp">
            <property name="maximum-size">400</property>
            <property name="tightening-threshold">300</property>
            <property name="child">
              <object class="AdwPreferencesPage">
                <property name="vexpand">true</property>
                
                <!-- Header Group -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Connections</property>
                    <property name="description">Manage your SSH connections</property>
                    
                    <child>
                      <object class="AdwActionRow" id="add_button">
                        <property name="title">Add Connection</property>
                        <property name="subtitle">Create a new SSH connection</property>
                        <property name="icon-name">list-add-symbolic</property>
                        <signal name="activated" handler="on_add_connection_clicked"/>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Connection List Group -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Saved Connections</property>
                    <property name="vexpand">true</property>
                    
                    <child>
                      <object class="AdwClampScrollable">
                        <property name="vexpand">true</property>
                        <property name="child">
                          <object class="GtkListBox" id="connection_list">
                            <property name="selection-mode">single</property>
                            <signal name="row-activated" handler="on_connection_activated"/>
                            <signal name="row-selected" handler="on_connection_selected"/>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Actions Group -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Actions</property>
                    
                    <child>
                      <object class="AdwActionRow" id="edit_button">
                        <property name="title">Edit Connection</property>
                        <property name="subtitle">Modify selected connection</property>
                        <property name="icon-name">document-edit-symbolic</property>
                        <property name="sensitive">false</property>
                        <signal name="activated" handler="on_edit_connection_clicked"/>
                      </object>
                    </child>
                    
                    <child>
                      <object class="AdwActionRow" id="delete_button">
                        <property name="title">Delete Connection</property>
                        <property name="subtitle">Remove selected connection</property>
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="sensitive">false</property>
                        <signal name="activated" handler="on_delete_connection_clicked"/>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Menu Group -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwActionRow" id="menu_button">
                        <property name="title">Menu</property>
                        <property name="subtitle">Application options</property>
                        <property name="icon-name">open-menu-symbolic</property>
                        <signal name="activated" handler="on_menu_clicked"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
        
        <!-- Main Content -->
        <property name="content">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            
            <!-- Tab Bar -->
            <child>
              <object class="AdwTabBar" id="tab_bar">
                <property name="autohide">false</property>
              </object>
            </child>
            
            <!-- Tab View -->
            <child>
              <object class="AdwTabView" id="tab_view">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <signal name="close-page" handler="on_tab_close"/>
                <signal name="page-attached" handler="on_tab_attached"/>
                <signal name="page-detached" handler="on_tab_detached"/>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
